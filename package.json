{
  "name": "bloc-them",
  "version": "5.0.3",
  "description": "Lit-Html powered BLoc system for creating Javascript based UI.",
  "author": "bloc-them",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anuragvohraec/bloc-them.git"
  },
  "scripts": {
    "start": "concurrently --kill-others --names tsc,web-dev-server \"npm run tsc:watch\" \"web-dev-server --app-index demo/index.html --node-resolve --open --watch\"",
    "tsc:watch": "tsc --watch",
    "prepublish": "npx rollup -c rollup.config.js"
  },
  "dependencies": {
    "lit-html": "^1.3.0"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.2.1",
    "@types/node": "13.11.1",
    "@web/dev-server": "^0.0.12",
    "concurrently": "^5.1.0",
    "rollup": "^2.47.0",
    "rollup-plugin-terser": "^7.0.2",
    "tslib": "^1.11.0",
    "typescript": "~4.0.3"
  }
}
